<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CheckLoginUser</servlet-name>
        <servlet-class>controller.CheckLoginUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLoginAdmin</servlet-name>
        <servlet-class>controller.CheckLoginAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertEmp</servlet-name>
        <servlet-class>controller.InsertEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchEmp</servlet-name>
        <servlet-class>controller.SearchEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAll</servlet-name>
        <servlet-class>controller.ShowAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEmp</servlet-name>
        <servlet-class>controller.DeleteEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmp</servlet-name>
        <servlet-class>controller.UpdateEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckLoginUser</servlet-name>
        <url-pattern>/CheckLoginUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckLoginAdmin</servlet-name>
        <url-pattern>/CheckLoginAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertEmp</servlet-name>
        <url-pattern>/InsertEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchEmp</servlet-name>
        <url-pattern>/SearchEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAll</servlet-name>
        <url-pattern>/ShowAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEmp</servlet-name>
        <url-pattern>/DeleteEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmp</servlet-name>
        <url-pattern>/UpdateEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
